<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailDonorActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarDetailDonor"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#8f3607"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userPicture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#FF000000"/>
            <TextView
                android:id="@+id/nama"
                android:text="Username"
                android:textSize="20sp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/buktiFoto"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/background_dark"/>

        </LinearLayout>

        <TextView
            android:text="Kebutuhan Darah untuk:"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_username"/>
            <TextView
                android:id="@+id/detailNama"
                android:text="Pasien"
                android:includeFontPadding="false"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_blood"/>

            <TextView
                android:id="@+id/detailGoldar"
                android:text="ABO"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/detailRhesus"
                android:text="Rhesus Darah"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="18dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_pendonor"/>
            <TextView
                android:id="@+id/jumlahDonor"
                android:text="Jumlah"
                android:includeFontPadding="false"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:text="Pendonor"
                android:includeFontPadding="false"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_hp"/>
            <TextView
                android:id="@+id/kontakPasien"
                android:text="No HP"
                android:includeFontPadding="false"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>
            <ImageView
                android:id="@+id/WA"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="2dp"
                android:src="@drawable/ic_whatsapp"/>
            <ImageView
                android:id="@+id/phone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_phone"
                android:background="@drawable/edittext"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_info"/>
            <TextView
                android:id="@+id/keteranganDonor"
                android:text="Keterangan"
                android:paddingTop="2dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="22dp">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_lokasi"/>
            <TextView
                android:id="@+id/lokasiDonor"
                android:text="Lokasi"
                android:includeFontPadding="false"
                android:paddingTop="2dp"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>