<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityBlood4Life">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarBlood4Life"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#8f3607"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/blood4life_twitter"
            android:background="@android:color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blood for Life Indonesia"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed-light"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/deskripsiBlood4Life"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textColor="@android:color/black"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/sosialMedia"
                    android:text="Ikuti Blood4LifeID di media sosial:"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"/>

                <RelativeLayout
                    android:layout_below="@id/sosialMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/twtBlood4Life"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/twitter"
                        android:background="@drawable/edittext"
                        android:padding="5dp"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <ImageView
                        android:id="@+id/fbBlood4Life"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/facebook"
                        android:background="@drawable/edittext"
                        android:padding="3dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/twtBlood4Life"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <ImageView
                        android:id="@+id/igBlood4Life"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/instagram"
                        android:background="@drawable/edittext"
                        android:padding="4dp"
                        android:layout_toRightOf="@+id/fbBlood4Life"
                        android:layout_marginRight="10dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>

                    <ImageView
                        android:id="@+id/webBlood4Life"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/website"
                        android:background="@drawable/edittext"
                        android:padding="3dp"
                        android:layout_toRightOf="@+id/igBlood4Life"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"/>
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>