<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:focusable="true"
    android:id="@+id/cardRequest">

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#8f3607"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:id="@+id/nPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_username"
                android:autoSizeTextType="uniform"
                android:layout_marginRight="8dp"/>
            <TextView
                android:id="@+id/namaPasien"
                android:text="Nama Pasien"
                android:textSize="15sp"
                android:paddingTop="2dp"
                android:textColor="@android:color/black"
                android:autoSizeTextType="uniform"
                android:includeFontPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_LL"
            android:layout_below="@+id/nPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_blood"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/golDarah"
                android:text="AB"
                android:paddingTop="2dp"
                android:textColor="@android:color/black"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"/>

            <TextView
                android:id="@+id/RH"
                android:text="Rhesus"
                android:paddingTop="2dp"
                android:textColor="@android:color/black"
                android:includeFontPadding="false"
                android:autoSizeTextType="uniform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_gravity="top"/>

            <TextView
                android:text=" - "
                android:paddingTop="2dp"
                android:textColor="@android:color/black"
                android:autoSizeTextType="uniform"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"/>

            <TextView
                android:id="@+id/jmlDonor"
                android:layout_below="@+id/namaPasien"
                android:text="JML"
                android:paddingTop="2dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:autoSizeTextType="uniform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"
                android:layout_gravity="top"/>

            <TextView
                android:text=" Pendonor"
                android:paddingTop="2dp"
                android:textColor="@android:color/black"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:autoSizeTextType="uniform"
                android:layout_height="wrap_content"
                android:layout_gravity="top"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/linear_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lokasi"
                android:layout_marginRight="13dp"/>
            <TextView
                android:id="@+id/lokasi"
                android:text="Lokasi"
                android:paddingTop="2dp"
                android:includeFontPadding="false"
                android:textColor="@android:color/black"
                android:autoSizeTextType="uniform"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.60"
                android:layout_gravity="top"
                />
            <TextView
                android:layout_below="@+id/linear_LL"
                android:id="@+id/tanggal"
                android:text="tanggal"
                android:paddingTop="2dp"
                android:includeFontPadding="false"
                android:autoSizeTextType="uniform"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.30"
                android:layout_gravity="top"/>
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>