<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommunityUTDJakarta">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarUTDJakarta"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#8f3607"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="30dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/utd_jakarta"
                android:background="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UTD PMI Prov. DKI Jakarta"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-light"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/deskripsiUTDJakarta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi"
                    android:textColor="@android:color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_blood"/>
                        <TextView
                            android:text="Cek Stok Darah:"
                            android:textColor="@android:color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/cekDarah"
                        android:text="Stok Darah"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:padding="10dp"
                        android:background="@drawable/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sosialMedia2"
                        android:text="Ikuti UTD PMI Jakarta di media sosial:"
                        android:textColor="@android:color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"/>

                    <RelativeLayout
                        android:layout_below="@id/sosialMedia2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/twtUTD"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/twitter"
                            android:background="@drawable/edittext"
                            android:padding="5dp"
                            android:layout_marginRight="10dp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"/>

                        <ImageView
                            android:id="@+id/fbUTD"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/facebook"
                            android:background="@drawable/edittext"
                            android:padding="3dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/twtUTD"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"/>

                        <ImageView
                            android:id="@+id/igUTD"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/instagram"
                            android:background="@drawable/edittext"
                            android:padding="4dp"
                            android:layout_toRightOf="@+id/fbUTD"
                            android:layout_marginRight="10dp"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"/>

                        <ImageView
                            android:id="@+id/webUTD"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/website"
                            android:background="@drawable/edittext"
                            android:padding="3dp"
                            android:layout_toRightOf="@+id/igUTD"
                            android:clickable="true"
                            android:foreground="?attr/selectableItemBackground"/>
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>